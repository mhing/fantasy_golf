= form_for @pick do |f|
  - if @pick.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pick.errors.count, "error")} prohibited this pick from being saved:"
      %ul
        - @pick.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :golfer
    = f.text_field :golfer
  .field
    = f.label :tournament
    = f.text_field :tournament
  .field
    = f.label :winnings
    = f.text_field :winnings
  .actions
    = f.submit 'Save'

.container
  .row
    .col.s12
      %h4=link_to 'Tournaments', tournaments_path

  .row
    .col.s12
      %table
        %thead
          %tr
            %th Name
            %th Position

        %tbody
          - @tournaments.each do |tournament|
            %tr
              -major = tournament.major
              -fedex = tournament.fedex_playoff
              %td{class:"#{major ? 'major' : (fedex ? 'fedex' : '')}"}= tournament.name
              %td= tournament.position

  .row
    .col.s12
      = link_to 'New Tournament', new_tournament_path, class:"btn"
